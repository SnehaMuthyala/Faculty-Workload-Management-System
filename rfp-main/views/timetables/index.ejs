      </td>
      <% } %>
    </tr>
    <tr>
      <td>
        <p>Tuesday</p>
      </td>
      <% for(let period of timetable.Tuesday){ %>
      <td>
        <p><%= period.subcode %></p>
      </td>
      <% } %>
    </tr>
    <tr>
      <td>
        <p>Wednesday</p>
      </td>
      <% for(let period of timetable.Wednesday){ %>
      <td>
        <p><%= period.subcode %></p>
      </td>
      <% } %>
    </tr>
    <tr>
      <td>
        <p>Thursday</p>
      </td>
      <% for(let period of timetable.Thursday){ %>
      <td>
        <p><%= period.subcode %></p>
      </td>
      <% } %>
    </tr>
    <tr>
      <td>
        <p>Friday</p>
      </td>
      <% for(let period of timetable.Friday){ %>
      <td>
        <p><%= period.subcode %></p>
      </td>
      <% } %>
    </tr>
    <tr>
      <td>
        <p>Saturday</p>
      </td>
      <% for(let period of timetable.Saturday){ %>
      <td>
        <p><%= period.subcode %></p>
      </td>
      <% } %>
    </tr>
  </table>
  <% } %>
</body>
