<% layout("/layouts/boilerplate")-%>

<body>
  <% for (timetable of timetableList){ %>
  <form action="/timetables/<%= timetable._id %>/edit" method="get">
    <button>edit</button>
  </form>

  <form action="/timetables/new" method="get">
    <button>new</button>
  </form>

  <table>
    <tr>
      <th>timetable</th>
      <th>1</th>
      <th>2</th>
      <th>3</th>
      <th>4</th>
      <th>5</th>
      <th>6</th>
      <th>7</th>
    </tr>
    <tr>
      <td>
        <p>Monday</p>
      </td>
