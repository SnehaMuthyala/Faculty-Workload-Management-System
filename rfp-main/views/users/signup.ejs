<% layout("/layouts/boilerplate")-%>

<body style="background-color: #182527">
  <div class="container">
    <div
      class="row justify-content-center align-items-center"
      style="height: 80vh"
    >
      <div class="col-6" style="background-color: #20cd8d; border-radius: 50px">
        <div class="row mt-3">
          <h1 class="col-6 offset-3 text-center">Sign Up</h1>
          <div class="col-6 offset-3">
            <form
              action="/signup"
              method="POST"
              class="needs-validation"
              novalidate
            >
              <div class="mb-3">
                <label for="username" class="form-label">UID</label>
                <input
                  type="text"
                  class="form-control"
                  name="username"
                  placeholder="Enter your Faculty ID/Student ID"
                  id="username"
                  required
                />
                <div class="valid-feedback">Looks good!</div>
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input
                  type="password"
                  class="form-control"
                  name="password"
                  placeholder="Enter your password"
                  id="password"
                  required
                />
              </div>
              <div class="mb-3">
                <p>Your role</p>
                <select name="role" id="" required class="form-control">
                  <option value="" disabled selected>Select your role</option>
                  <option value="student">Student</option>
                  <option value="teacher">Teacher</option>
                  <option value="admin">Admin</option>
                </select>
              </div>
              <div class="col-12 d-flex justify-content-center">
                <!-- Center the button -->
                <button
                  class="btn btn-success"
                  style="margin-top: 20px; margin-bottom: 20px"
                >
                  Sign Up
                </button>
                <!-- Add margin-top -->
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
